<%= form_for [@user, @pick] do |f| %>
<% if @pick.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @pick.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h4>
    Week Number
  </h4>

    <%= f.select :week_number, (1..17) %>
  <h4>
    Make Your Picks (List them 1-3) </br>
   </h4>
   <p>
    <%= link_to "See example", static_example_path %>
   </p>
   <p>
    <%= f.text_area :pick_content %>
  </p>
  <%= f.submit "Submit", class: "button" %>
<% end %>
