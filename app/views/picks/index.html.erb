<h2>Weekly Picks</h2>

<table class = "table">
	<thead>
		<tr>
			<th>Week Number</th>
			<th>Picks</th>
		</tr>
	</thead>
	<tbody>
  <% @picks.each do |p| %>
  	<tr>
      <th><%=  p.week_number %> </th>
      <th><%=  p.pick_content %> </th>
      <th><%=  link_to "Edit" , edit_user_pick_path(@user, p) %></th>

  	</tr>
  <% end %>
</tbody>
</table>